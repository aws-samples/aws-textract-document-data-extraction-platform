{
  "tasks": {
    "build": {
      "name": "build",
      "description": "Full release build",
      "steps": [
        {
          "spawn": "pre-compile"
        },
        {
          "spawn": "compile"
        },
        {
          "spawn": "post-compile"
        },
        {
          "spawn": "test"
        },
        {
          "spawn": "package"
        }
      ]
    },
    "compile": {
      "name": "compile",
      "description": "Only compile",
      "steps": [
        {
          "exec": "DISABLE_ESLINT_PLUGIN=true react-app-rewired build --verbose"
        }
      ]
    },
    "copy:api-docs": {
      "name": "copy:api-docs",
      "steps": [
        {
          "exec": "rm -rf public/api-docs"
        },
        {
          "exec": "mkdir -p public/api-docs"
        },
        {
          "exec": "cp -r ../api/documentation/html2/* public/api-docs"
        }
      ]
    },
    "default": {
      "name": "default",
      "description": "Synthesize project files"
    },
    "dev": {
      "name": "dev",
      "description": "Starts the react application",
      "steps": [
        {
          "exec": "DISABLE_ESLINT_PLUGIN=true react-app-rewired start"
        }
      ]
    },
    "eslint": {
      "name": "eslint",
      "description": "Runs eslint against the codebase",
      "steps": [
        {
          "exec": "eslint --ext .ts,.tsx --fix --no-error-on-unmatched-pattern src test build-tools"
        }
      ]
    },
    "install": {
      "name": "install",
      "description": "Install project dependencies and update lockfile (non-frozen)",
      "steps": [
        {
          "exec": "yarn install --check-files"
        }
      ]
    },
    "install:ci": {
      "name": "install:ci",
      "description": "Install project dependencies using frozen lockfile",
      "steps": [
        {
          "exec": "yarn install --check-files --frozen-lockfile"
        }
      ]
    },
    "package": {
      "name": "package",
      "description": "Creates the distribution package"
    },
    "post-compile": {
      "name": "post-compile",
      "description": "Runs after successful compilation"
    },
    "post-upgrade": {
      "name": "post-upgrade",
      "description": "Runs after upgrading dependencies"
    },
    "pre-compile": {
      "name": "pre-compile",
      "description": "Prepare the project for compilation",
      "steps": [
        {
          "spawn": "copy:api-docs"
        }
      ]
    },
    "test": {
      "name": "test",
      "description": "Run tests",
      "steps": [
        {
          "exec": "DISABLE_ESLINT_PLUGIN=true react-app-rewired test --watchAll=false"
        },
        {
          "spawn": "eslint"
        }
      ]
    },
    "upgrade": {
      "name": "upgrade",
      "description": "upgrade dependencies",
      "env": {
        "CI": "0"
      },
      "steps": [
        {
          "exec": "yarn upgrade npm-check-updates"
        },
        {
          "exec": "npm-check-updates --dep dev --upgrade --target=minor --reject='@aws-amplify/api,@aws-amplify/auth,@aws-amplify/ui-react,aws-amplify'"
        },
        {
          "exec": "npm-check-updates --dep bundle --upgrade --target=minor --reject='@aws-amplify/api,@aws-amplify/auth,@aws-amplify/ui-react,aws-amplify'"
        },
        {
          "exec": "npm-check-updates --dep peer --upgrade --target=minor --reject='@aws-amplify/api,@aws-amplify/auth,@aws-amplify/ui-react,aws-amplify'"
        },
        {
          "exec": "npm-check-updates --dep prod --upgrade --target=minor --reject='@aws-amplify/api,@aws-amplify/auth,@aws-amplify/ui-react,aws-amplify'"
        },
        {
          "exec": "npm-check-updates --dep optional --upgrade --target=minor --reject='@aws-amplify/api,@aws-amplify/auth,@aws-amplify/ui-react,aws-amplify'"
        },
        {
          "exec": "yarn install --check-files"
        },
        {
          "exec": "yarn upgrade @testing-library/jest-dom @testing-library/react @testing-library/user-event @types/humanize-duration @types/jest @types/node @types/react-dom @types/react-pdf @types/react-router-dom @types/react @typescript-eslint/eslint-plugin @typescript-eslint/parser eslint-import-resolver-node eslint-import-resolver-typescript eslint-plugin-import eslint npm-check-updates projen react-app-rewired react-scripts typescript @aws-amplify/api @aws-amplify/auth @aws-amplify/ui-react @aws/api-typescript-runtime @material-ui/icons @types/lodash ace-builds aws-amplify aws-northstar aws4fetch graphql humanize-duration lodash react react-ace react-dom react-pdf react-router-dom react-scripts react-zoom-pan-pinch web-vitals"
        },
        {
          "exec": "npx projen"
        },
        {
          "spawn": "post-upgrade"
        }
      ]
    },
    "watch": {
      "name": "watch",
      "description": "Watch & compile in the background",
      "steps": [
        {
          "exec": "tsc --build -w"
        }
      ]
    }
  },
  "env": {
    "PATH": "$(npx -c \"node --print process.env.PATH\")"
  },
  "//": "~~ Generated by projen. To modify, edit .projenrc.js and run \"npx projen\"."
}
