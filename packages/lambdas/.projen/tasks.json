{
  "tasks": {
    "build": {
      "name": "build",
      "description": "Full release build",
      "steps": [
        {
          "spawn": "pre-compile"
        },
        {
          "spawn": "compile"
        },
        {
          "spawn": "post-compile"
        },
        {
          "spawn": "test"
        },
        {
          "spawn": "package"
        }
      ]
    },
    "compile": {
      "name": "compile",
      "description": "Only compile"
    },
    "default": {
      "name": "default",
      "description": "Synthesize project files"
    },
    "install": {
      "name": "install",
      "description": "Install and upgrade dependencies",
      "steps": [
        {
          "exec": "poetry env info -p || poetry env use python"
        },
        {
          "exec": "poetry update"
        }
      ]
    },
    "lint": {
      "name": "lint",
      "steps": [
        {
          "exec": "licenseheaders -E .py -x '*/__init__.py' -d aws_lambdas -t header.txt"
        },
        {
          "exec": "licenseheaders -E .py -x '*/__init__.py' -d tests -t header.txt"
        },
        {
          "exec": "black aws_lambdas"
        },
        {
          "exec": "black tests"
        }
      ]
    },
    "package": {
      "name": "package",
      "description": "Creates the distribution package",
      "steps": [
        {
          "exec": "poetry build"
        },
        {
          "exec": "mkdir -p lambda-dist && rm -rf lambda-dist/*"
        },
        {
          "exec": "cp -r aws_lambdas lambda-dist/aws_lambdas"
        },
        {
          "exec": "poetry export --without-hashes --format=requirements.txt > lambda-dist/requirements.txt"
        },
        {
          "exec": "pip install -r lambda-dist/requirements.txt --target lambda-dist --upgrade"
        }
      ]
    },
    "post-compile": {
      "name": "post-compile",
      "description": "Runs after successful compilation",
      "steps": [
        {
          "exec": "mypy aws_lambdas"
        }
      ]
    },
    "pre-compile": {
      "name": "pre-compile",
      "description": "Prepare the project for compilation"
    },
    "publish": {
      "name": "publish",
      "description": "Uploads the package to PyPI.",
      "steps": [
        {
          "exec": "poetry publish"
        }
      ]
    },
    "publish:test": {
      "name": "publish:test",
      "description": "Uploads the package against a test PyPI endpoint.",
      "steps": [
        {
          "exec": "poetry publish -r testpypi"
        }
      ]
    },
    "test": {
      "name": "test",
      "description": "Run tests",
      "steps": [
        {
          "exec": "which python"
        },
        {
          "exec": "pytest"
        },
        {
          "exec": "poetry run pytest"
        },
        {
          "spawn": "lint"
        }
      ]
    }
  },
  "env": {
    "VIRTUAL_ENV": "$(poetry env info -p)",
    "PATH": "$(echo $(poetry env info -p)/bin:$PATH)"
  },
  "//": "~~ Generated by projen. To modify, edit .projenrc.js and run \"npx projen\"."
}
